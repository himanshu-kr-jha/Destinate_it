<% layout("layouts/boilerplate") %>
<style>
  .error-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background-color: #f8f9fa;
    padding: 20px;
}

.error-box {
    text-align: center;
    max-width: 500px;
    background: linear-gradient(145deg, #fe424d, #ffffff);
    border-radius: 15px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    padding: 40px;
    color: #343a40;
}

.error-box .icon {
    font-size: 60px;
    color: #fe424d; /* Matches the theme's primary color */
    margin-bottom: 20px;
}

.error-box h1 {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 15px;
}

.error-box .error-message {
    color: #6c757d;
    font-size: 1.1rem;
    margin-bottom: 25px;
}

.error-box .btn {
    font-size: 1rem;
    padding: 12px 25px;
    margin: 10px;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.error-box .btn-primary {
    background-color: #fe424d;
    color: white;
    box-shadow: 0 4px 10px rgba(254, 66, 77, 0.4);
}

.error-box .btn-primary:hover {
    background-color: #d53a45;
    transform: translateY(-2px);
}

.error-box .btn-secondary {
    background-color: #6c757d;
    color: white;
    box-shadow: 0 4px 10px rgba(108, 117, 125, 0.4);
}

.error-box .btn-secondary:hover {
    background-color: #5a6268;
    transform: translateY(-2px);
}

@media (max-width: 768px) {
    .error-box {
        padding: 30px;
    }

    .error-box h1 {
        font-size: 1.8rem;
    }

    .error-box .btn {
        font-size: 0.9rem;
        padding: 10px 20px;
    }
}

</style>
<div class="error-container">
    <div class="error-box">
        <div class="icon">
            <i class="fa-solid fa-triangle-exclamation"></i>
        </div>
        <h1>Oops! Something went wrong.</h1>
        <p class="error-message"><%= message %></p>
        <button class="btn btn-primary retry-btn" onclick="location.reload()">Try Again</button>
        <button class="btn btn-secondary home-btn" onclick="window.location.href='/listing'">Go to Homepage</button>
    </div>
</div>
