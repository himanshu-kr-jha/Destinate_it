<% layout("layouts/boilerplate") %>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        margin-left: 3rem;
    }
    .filter{
        text-align: center;
        margin-top: 1.5rem;
        margin-right: 2rem;
        opacity: 0.6;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
</style>
<body>
    <!-- <h1>All Listings</h1> -->
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
    
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Homes</p>
        </div>
    
        <div class="filter">
            <div><i class="fa-solid fa-utensils"></i></div>
            <p>Restaurants</p>
        </div>
    
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Nature</p>
        </div>
    
        <div class="filter">
            <div><i class="fa-solid fa-spa"></i></div>
            <p>Wellness</p>
        </div>
    
        <div class="filter">
            <div><i class="fa-solid fa-bicycle"></i></div>
            <p>Adventure</p>
        </div>
    
        <div class="filter">
            <div><i class="fa-solid fa-palette"></i></div>
            <p>Art & Culture</p>
        </div>
    
        <div class="filter">
            <div><i class="fa-solid fa-coffee"></i></div>
            <p>Cafes</p>
        </div>
    
        <div class="filter">
            <div><i class="fa-solid fa-tree"></i></div>
            <p>Parks & Gardens</p>
        </div>
    
        <div class="filter">
            <div><i class="fa-solid fa-monument"></i></div>
            <p>Monuments</p>
        </div>
    </div>
    
    <div class="row row-cards row-cols-lg-3 row-cols-md-2 row-cols-lg-1 mb-3 mt-3">
        <% for(let data of lists) { %>
            <a href="/listing/<%=data._id%>" style="text-decoration: none;" >
                <div class="card-list cols" style="width: 20rem">
                    <img class="card-img-top-list" src="<%= data.image.url %>" alt="Card image cap" style="height: 20rem"/>
                    <div class="card-img-overlay-list"></div>
                    <div class="card-body-list">
                        <p class="card-text-list">
                            <b><%= data.title %></b>
                            <br>
                            &#8377; <%= data.price.toLocaleString("en-IN") %> / night
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>
