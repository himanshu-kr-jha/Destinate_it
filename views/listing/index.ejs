<% layout("layouts/boilerplate") %>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<body>
    <!-- <h1>All Listings</h1> -->
    <%- include("../includes/category.ejs") %>
    
    <div class="row row-cards row-cols-lg-3 row-cols-md-2 row-cols-lg-1 mb-3 mt-3">
        <% for(let data of lists) { %>
            <a href="/listing/<%=data._id%>" style="text-decoration: none;" >
                <div class="card-list cols" style="width: 20rem">
                    <img class="card-img-top-list" src="<%= data.image.url %>" alt="Card image cap" style="height: 20rem"/>
                    <div class="card-img-overlay-list"></div>
                    <div class="card-body-list">
                        <p class="card-text-list">
                            <b><%= data.title %></b>
                            <br>
                            &#8377; <%= data.price.toLocaleString("en-IN") %>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
    <style>
        #filters {
            margin-top: 1rem;
        }
    
        .filter {
            text-align: center;
            margin: 0.5rem;
            opacity: 0.6;
            transition: opacity 0.3s ease;
            padding: 0 1rem; /* Space between filters */
        }
    
        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }
    
        .filter p {
            margin-top: 0.5rem;
            font-size: 0.9rem;
        }
        .navbar{
            background-color: white !important;
        }
        @media (min-width: 992px) {
            .filter {
                flex: 1 1 calc(10% - 2rem); /* Adjusted to include padding */
                max-width: calc(10% - 2rem);
            }
        }
    
        @media (max-width: 991.98px) and (min-width: 768px) {
            .filter {
                flex: 1 1 calc(20% - 2rem);
                max-width: calc(20% - 2rem);
            }
        }
    
        @media (max-width: 767.98px) {
            .filter {
                flex: 1 1 calc(33.333% - 2rem);
                max-width: calc(33.333% - 2rem);
            }
        }
    
        @media (max-width: 575.98px) {
            .filter {
                flex: 1 1 100%;
                max-width: 100%;
            }
        }
    </style>
    
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
