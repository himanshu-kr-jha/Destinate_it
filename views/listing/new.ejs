<% layout("layouts/boilerplate") %>
<body>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="mb-4 text-center">Add Your Place</h1>
                <form class="newform needs-validation" novalidate action="/listing/new" method="post">
                    <div class="form-group mb-3">
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" name="listing[title]" id="title" placeholder="Add a catchy title&nbsp;" required>
                        <div class="valid-feedback">Title looks awesome!!</div>
                        <div class="invalid-feedback">Give a valid title!!</div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="description">Description:</label>
                        <textarea class="form-control" name="listing[description]" id="description" required placeholder="Description about your place"></textarea>
                        <div class="valid-feedback">Well described!!</div>
                        <div class="invalid-feedback">Can't be empty</div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="image">Image URL:</label>
                        <input type="url" class="form-control" name="listing[image]" id="image" placeholder="Image URL">
                    </div>
                    <div class="form-group mb-3">
                        <label for="price">Price:</label>
                        <input class="form-control" type="number" name="listing[price]" id="price" placeholder="1200" required>
                        <div class="valid-feedback">It's affordable as per the services.</div>
                        <div class="invalid-feedback">Price should be valid!!</div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="location">Location:</label>
                        <input type="text" class="form-control" name="listing[location]" id="location" placeholder="Jaipur, Rajasthan" required>
                        <div class="valid-feedback">Located at a nice place!!</div>
                        <div class="invalid-feedback">Location can't be empty!!</div>
                    </div>
                    <div class="form-group mb-4">
                        <label for="country">Country:</label>
                        <input type="text" class="form-control" name="listing[country]" id="country" placeholder="India" required>
                        <div class="valid-feedback">Nice!!</div>
                        <div class="invalid-feedback">Can't be empty!!</div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary add-btn">Add Place</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
