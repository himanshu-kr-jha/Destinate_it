<% layout("layouts/boilerplate") %>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<meta name="google-adsense-account" content="ca-pub-8976075450983493">
<style>
    /* Custom styles for smaller, fixed-size cards with rounded corners */
    .card {
        width: 100%; /* Make cards full width */
        max-width: 300px; /* Limit max width */
        height: 350px;
        margin: 10px;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    
    .card img {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        height: 170px;
        object-fit: cover;
    }
    
    .card-body {
        padding: 10px;
    }
    
    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }
    
    .card-text {
        font-size: 0.9rem;
    }

    .card-location {
        font-size: 0.85rem;
        color: #6c757d;
    }

    .description-short {
        max-height: 45px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    /* Responsive styling */
    @media (max-width: 576px) {
        .card {
            width: 100%; /* Full width for mobile */
        }
    }
</style>

<body>
    <div class="container mt-5">
        <h1 class="mb-4">Search Results for "<%= searchQuery %>"</h1>

        <% if (results.length > 0) { %>
            <div id="search-results" class="d-flex flex-wrap justify-content-center">
                <% results.slice(0, 3).forEach(destination => { %> <!-- Initially show 3 results -->
                    <a href="/listing/<%= destination._id %>" style="text-decoration: none;">
                    <div class="card mb-3">        
                        <img src="<%= destination.image.url %>" class="img-fluid" alt="<%= destination.title %>">
                        <div class="card-body">
                            <h5 class="card-title" style="color: #fe424d; font-size: medium;"><%= destination.title %></h5>
                            <p class="card-text description-short" style="color: #000; font-size: medium;"><%= destination.description %></p>
                            <p class="card-location">Location: <%= destination.location %>, <%= destination.country %></p>
                        </div>
                    </div>
                    </a>
                <% }) %>
            </div>

            <!-- Pagination Controls -->
            <div class="text-center">
                <button id="prev-btn" class="btn" style="background-color: #fe424d; color: white; font-size: medium;" disabled>
                    <i class="fas fa-arrow-left"></i>
                </button>
                <button id="next-btn" class="btn" style="background-color: #fe424d; color: white; font-size: medium;">
                    <i class="fas fa-arrow-right"></i>
                </button>
            </div>

        <% } else { %>
            <p>No results found for "<%= searchQuery %>".</p>
        <% } %>
    </div>

    <script>
        const results = <%- JSON.stringify(results) %>;
        const resultsPerPage = 3;
        let currentPage = 0;

        function renderResults() {
            const searchResultsContainer = document.getElementById('search-results');
            searchResultsContainer.innerHTML = ''; // Clear previous results

            const startIndex = currentPage * resultsPerPage;
            const endIndex = startIndex + resultsPerPage;
            const paginatedResults = results.slice(startIndex, endIndex);

            paginatedResults.forEach(destination => {
                const newCard = `
                <a href="/listing/${destination._id}" style="text-decoration: none;">
                <div class="card mb-3">
                    <img src="${destination.image.url}" class="img-fluid" alt="${destination.title}">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #fe424d; font-size: medium;">${destination.title}</h5>
                        <p class="card-text description-short" style="color: #000; font-size: medium;">${destination.description}</p>
                        <p class="card-location">Location: ${destination.location}, ${destination.country}</p>
                    </div>
                </div>
                </a>`;
                
                searchResultsContainer.insertAdjacentHTML('beforeend', newCard);
            });

            // Disable buttons based on the current page
            document.getElementById('prev-btn').disabled = currentPage === 0;
            document.getElementById('next-btn').disabled = endIndex >= results.length;
        }

        document.getElementById('next-btn').addEventListener('click', function() {
            currentPage++;
            renderResults();
        });

        document.getElementById('prev-btn').addEventListener('click', function() {
            currentPage--;
            renderResults();
        });

        // Initial render
        renderResults();
    </script>
</body>
