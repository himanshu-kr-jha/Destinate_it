<% layout("layouts/boilerplate") %>
<body>
    <div class="container mt-2">
        <div class="row ">
            <div class="col-md-9">
                <h1 class="mb-4">Update About Your Place</h1>
                <form class="newform" action="/listing/<%= list._id %>?_method=PUT" method="post">
                    <div class="form-group mb-3">
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" name="listing[title]" id="title" value="<%= list.title %>" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="description">Description:</label>
                        <textarea class="form-control" name="listing[description]" id="description" required><%= list.description %></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label for="image">Image URL:</label>
                        <input type="url" class="form-control" name="listing[image]" id="image" value="<%= list.image %>">
                    </div>
                    <div class="form-group mb-3">
                        <label for="price">Price:</label>
                        <input type="number" class="form-control" name="listing[price]" id="price" value="<%= list.price %>" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="location">Location:</label>
                        <input type="text" class="form-control" name="listing[location]" id="location" value="<%= list.location %>" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="country">Country:</label>
                        <input type="text" class="form-control" name="listing[country]" id="country" value="<%= list.country %>" required>
                    </div>
                    <button type="submit" class="btn add-btn btn-primary mb-3">Update Place</button>
                </form>
            </div>
        </div>
    </div>
</body>
